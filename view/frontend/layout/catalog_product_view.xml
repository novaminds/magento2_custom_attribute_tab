<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="product.info.details">
                 <block class="Magento\Catalog\Block\Product\View\Description" name="customattribute-content" template="NovaMinds_Customattribute::product/view/hemah-content.phtml" group="detailed_info" >
                    <arguments>
                        <argument name="at_call" xsi:type="string">getCustomattribute</argument>
                        <argument name="at_code" xsi:type="string">Customattribute</argument>
                        <argument name="css_class" xsi:type="string">customattribute</argument>
                        <argument name="at_label" xsi:type="string">customattribute</argument>
                        <argument name="add_attribute" xsi:type="string">itemprop="customattribute"</argument>
                        <argument name="title" xsi:type="helper" helper="NovaMinds\Customattribute\Helper\Data::getTapLabel"/>
                    </arguments>
                </block>
            </referenceBlock>

        </referenceContainer>
    </body>
</page>